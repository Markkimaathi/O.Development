<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tenders_tree" model="ir.ui.view">
        <field name="name">tenders.management</field>
        <field name="model">tender.management</field>
        <field name="arch" type="xml">
            <tree string="Tenders Management">
                <field name="name"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>
    <record id="view_tenders_form" model="ir.ui.view">
        <field name="name">tenders.management</field>
        <field name="model">tender.management</field>
        <field name="arch" type="xml">
            <form string="Tenders Management">
                <field name="name"/>
                <field name="ref"/>
            </form>
        </field>
    </record>
    <record id="action_tenders" model="ir.actions.act_window">
        <field name="name">Tenders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tender.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_management_tenders_main"
              name="Tenders"
              parent="menu_tenders_master"
              action="action_tenders"
              sequence="5"/>


    <menuitem id="menu_procurement_management_supplier_name"
              name="Vendors"
              parent="menu_tenders_vendors_master"
              action="account.res_partner_action_supplier"
              sequence="15"/>

    <record id="product_normal_action_puchased" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{}</field>

    </record>

    <menuitem name="Products" id="menu_procurement_partner_contact_form"
              action="product_normal_action_puchased"
              parent="menu_tenders_products_master"
              sequence="20"/>

</odoo>