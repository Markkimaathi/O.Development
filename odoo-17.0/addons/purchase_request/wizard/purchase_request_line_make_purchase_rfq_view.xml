<odoo>
    <record id="view_purchase_request_line_make_rfq" model="ir.ui.view">
        <field name="name">Purchase Request Line Make Rfq</field>
        <field name="model">purchase.request.line.make.rfq</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Create RFQ">
                <newline />
                <group>
                    <field
                        name="rfq_id"
                        domain="[('partner_id', '=', supplier_id)]"
                    />
                </group>
                <newline />
                <separator string="RFQ details:" />
                <newline />
                <group>
                    <field name="supplier_id" />
                </group>
                <newline />
                <group>
                    <field name="item_ids" nolabel="1" colspan="2">
                        <tree name="Details" create="false" editable="bottom">
                            <field
                                name="line_id"
                                options="{'no_open': true}"
                                column_invisible="1"
                            />
                            <field name="request_id" readonly="1" />
                            <field name="product_id" />
                            <field name="name" />
                            <field name="product_qty" />
                            <field
                                name="product_uom_id"
                                column_invisible="1"
                                groups="!uom.group_uom"
                            />
                            <field name="product_uom_id" groups="uom.group_uom" />
                            <field name="keep_description" widget="boolean_toggle" />
                        </tree>
                    </field>
                </group>
                <newline />
                <footer>
                    <button
                        name="make_rfq"
                        string="Create RFQ"
                        type="object"
                        class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
    <record
        id="action_purchase_request_line_make_rfq"
        model="ir.actions.act_window"
    >
        <field name="name">Create RFQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_purchase_request_line_make_rfq" />
        <field name="target">new</field>
        <field
            name="binding_model_id"
            ref="purchase_request.model_purchase_request_line"
        />
    </record>
</odoo>