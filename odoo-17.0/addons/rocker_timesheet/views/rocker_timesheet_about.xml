<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>	

	<record id="rocker_timesheet_about" model="ir.ui.view">
		<field name="name">rocker.timesheet.about.form</field>
		<field name="model">rocker.timesheet.about</field>
		<field name="arch" type="xml">
			<form string="About Rocker Timesheet" create="false" edit="false">
				<div>
					<field name="name"  class="oe_inline"/>
					<field name="paypal" widget="html" class="oe_inline"/>
					<div>
					<h2>
						<p style="margin-left: 30px;">
					<field name="donate" widget="url" readonly="1" text="Donate with PayPal..."/>
						</p>
					</h2>
					</div>
					<field name="legal" class="oe_inline"/>
				</div>
				<footer>
					<button string="OK" class="btn-primary" special="cancel" />
				</footer>

			</form>
		</field>
	</record>

</data>
</odoo>