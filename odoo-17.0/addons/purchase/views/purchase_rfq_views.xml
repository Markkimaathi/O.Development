<odoo>

    <record id="action_purchase_rfq" model="ir.actions.act_window">
        <field name="name">RFQs</field>
        <field name="res_model">purchase.rfq</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_purchase_rfq_form" model="ir.ui.view">
        <field name="name">purchase.rfq.form</field>
        <field name="model">purchase.rfq</field>
        <field name="arch" type="xml">
            <form string="Request for Quotation"
                  create="0"
            >

                <header>
                    <button name="action_draft" type="object" string="Draft" class="oe_highlight"
                            invisible="state not in ['sent','cancel']"/>
                    <button name="action_sent" type="object" string="Sent" class="oe_highlight"
                            invisible="state not in 'draft' "/>
                    <button name="action_done" type="object" string="Done" class="oe_highlight"
                            invisible="state not in 'sent' "/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight"
                            invisible="state in ['done','cancel']"/>
                    <button name="%(action_purchase_rfq)d" type="action" string="View RFQ" class="oe_highlight"
                            invisible="state not in 'done' "/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="ref"/>
                        <field name="partner_id"/>
                        <field name="date_planned"/>
                        <field name="amount_total" readonly="1"/>
                    </group>
                    <notebook>

                        <page string="Order Lines">
                            <!--                            <group>-->
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <!--                                <field name="price_unit"/>-->
                                    <!--                                <field name="price_subtotal" readonly="1"/>-->
                                </tree>
                            </field>
                            <!--                            </group>-->


                            <!--                            <group>-->
                            <!--                                <field name="item_ids">-->
                            <!--                                    <tree>-->
                            <!--                                        <field name="product_id"/>-->
                            <!--                                        <field name="name"/>-->
                            <!--                                        <field name="product_qty"/>-->
                            <!--                                        <field name="product_uom_id"/>-->
                            <!--                                    </tree>-->
                            <!--                                </field>-->
                            <!--                            </group>-->
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_purchase_rfq_tree" model="ir.ui.view">
        <field name="name">purchase.rfq.tree</field>
        <field name="model">purchase.rfq</field>
        <field name="arch" type="xml">
            <tree string="Request for Quotation">
                <field name="ref"/>
                <field name="partner_id"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'sent'"
                       decoration-danger="state == 'cancel'"
                       widget="badge"/>
                <field name="amount_total" readonly="1"/>
            </tree>
        </field>
    </record>


    <menuitem id="menu_purchase_rfq" name="RFQs" parent="menu_procurement_management" action="action_purchase_rfq"
              sequence="0"/>
    <!--    <menuitem id="submenu_purchase_rfq" name="All RFQs" parent="menu_purchase_rfq" />-->
</odoo>
